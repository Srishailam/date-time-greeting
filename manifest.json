{
  "manifest_version": 3,
  "name": "Date Time Greeting",
  "version": "1.0",
  "description": "Beautiful new tab with time, date, greeting, and live weather - no API key required!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": ["geolocation"],
  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://geocoding-api.open-meteo.com/*",
    "https://ipapi.co/*"
  ]
}

